{% macro product(name, highlight, features, summary, details, images, documents) %}
  <div class="product-row">
    <div class="product-images">
      {% for image in images %}
        <img src="{{ image[0] }}" width="200" height="200" alt="{{ image[1] }}"/>
      {% endfor %}
    </div>
    <div class="product-name">
      <h3>{{name}}</h3>
    </div>
    <div class="product-highlight">
      <h3>{{highlight}}</h3>
    </div>
    <div class="product-features">
      <ul>
        {% for feature in features %}
          <li>
            <div class="{{feature[0]}}"></div>
            <p>{{ feature[1] }}</p>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="product-summary">
      <p>{{ summary | safe }}</p>
    </div>
    <div class="product-details">
      <p>{{ details | safe}}</p>
    </div>

    {% for document in documents %}
      <div class="product-document-link {{ document[0] }}">
        <span class="file"><img class="file-icon" alt="" title="application/pdf" src="/assets/images/application-pdf.png"/>
          <a href="{{ document[1] }}">{{ document[2] }}</a>
        </span>
      </div>
    {% endfor %}

    <div class="product-contact-link">
      <a href="mailto:technischedienst@interflux.com?Subject={{ name }}" target="_blank" rel="nofollow">Contact us for more info / demo / samples</a>
    </div>
  </div>
{% endmacro %}